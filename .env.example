# MOFSimBench 本地开发环境配置
# 复制此文件为 .env 并修改配置

# 应用
APP_NAME=MOFSimBench
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# API
API_HOST=127.0.0.1
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=*

# 数据库 (本地开发使用 SQLite 或 Docker PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=mofsim
DB_PASSWORD=mofsim_password
DB_NAME=mofsim_bench
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery
CELERY_TASK_SOFT_TIMEOUT=3600
CELERY_TASK_HARD_TIMEOUT=3900
CELERY_WORKER_PREFETCH=1

# GPU (Windows 开发环境无 GPU)
# GPU_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.9

# 存储
STORAGE_BASE_PATH=./data
STORAGE_UPLOAD_PATH=./data/uploads
STORAGE_RESULT_PATH=./data/results
STORAGE_MODEL_PATH=./data/models
STORAGE_LOG_PATH=./data/logs
STORAGE_MAX_UPLOAD_SIZE_MB=100

# 日志
LOG_LEVEL=DEBUG
LOG_FORMAT=console
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=7
